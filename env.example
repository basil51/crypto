# Database
# If using docker-compose.dev.yml (ports 5433:5432), use port 5433:
DATABASE_URL=postgresql://crypto_user:crypto_password@localhost:5433/crypto_db
# If using local PostgreSQL or docker-compose.yml (standard ports), use:
# DATABASE_URL=postgresql://crypto_user:crypto_password@localhost:5432/crypto_db

# Redis
# If using docker-compose.dev.yml (ports 6380:6379), use port 6380:
REDIS_URL=redis://localhost:6380
# If using local Redis or docker-compose.yml (standard ports), use:
# REDIS_URL=redis://localhost:6379

# Backend
BACKEND_PORT=3001
NODE_ENV=development

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# JWT (for later)
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# External APIs (for later)
MORALIS_API_KEY=
ALCHEMY_API_KEY=
COINGECKO_API_KEY=
